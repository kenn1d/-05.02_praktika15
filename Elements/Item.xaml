<UserControl x:Class="praktika15.Elements.Item"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:praktika15.Elements"
             mc:Ignorable="d">
    <Grid Background="White">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="70"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Image x:Name="img" Width="50" Height="50" VerticalAlignment="Top"
               HorizontalAlignment="Left" Margin="10" Source="/Images/icon-black.png"/>
        <Label x:Name="lName" Content="Наименование" FontWeight="Bold" VerticalAlignment="Top"
               Grid.Column="1" Margin="10"/>
        <Label x:Name="lUser" Content="Ответственный: Иванов И.И." VerticalAlignment="Top"
               Grid.Column="1" Margin="10, 35"/>
        <Label x:Name="lCode" Content="Код документа"
               VerticalAlignment="Top" Grid.Column="1" Margin="10, 60"/>
        <Label x:Name="lDate" Content="Дата поступления" FontWeight="Bold" VerticalAlignment="Top"
               Grid.Column="2" Margin="10"/>
        <Label x:Name="lStatus" Content="Статус: Входящий" VerticalAlignment="Top"
               Grid.Column="2" Margin="10, 35"/>
        <Label x:Name="lDirection" Content="Направление"
               VerticalAlignment="Top" Grid.Column="2" Margin="10, 60"/>

        <Button Content="Изменить" Click="EditDocument" Margin="0, 85, 120, 0" Width="100" Height="25"
                Background="White" Grid.Column="2" VerticalAlignment="Top" HorizontalAlignment="Right"/>
        <Button Content="Удалить" Click="DeleteDocument" Margin="0, 85, 10, 0" Width="100" Height="25"
                Background="White" Grid.Column="2" VerticalAlignment="Top" HorizontalAlignment="Right"/>
        
    </Grid>
</UserControl>
