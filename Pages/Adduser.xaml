<Page x:Class="praktika15.Pages.Adduser"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:praktika15.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Adduser">

    <Grid Background="White">
        <Grid Height="50" VerticalAlignment="Top" Background="#FF964E4E">
            <Image Width="30" Height="30" VerticalAlignment="Top" HorizontalAlignment="Left"
               Margin="10" Source="/Images/group.png"/>
            <Label Content="Добавить ответственного"
               Foreground="White" VerticalAlignment="Center"
               HorizontalContentAlignment="Center" FontSize="20"
               FontWeight="Bold"/>
            <Button Content="Вернуться" Click="Back" Width="75" Height="25" VerticalAlignment="Top"
               HorizontalAlignment="Right" Margin="10" Background="White"/>
        </Grid>

        <Label Content="Укажите наименование:" VerticalAlignment="Top" Margin="10,60, 10, 0"/>
        <TextBox x:Name="tbName" VerticalAlignment="Top" Height="25" Margin="10,85,10,0"/>
        <Button Content="Сохранить" x:Name="bthAdd" Click="AddUser" VerticalAlignment="Top" HorizontalAlignment="Right"
            Width="75" Height="25" Margin="10,115,715,0" Background="White"/>

    </Grid>
</Page>
