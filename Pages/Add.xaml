<Page x:Class="praktika15.Pages.Add"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:praktika15.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Add">

    <Grid Background="White">
        <Grid Height="50" VerticalAlignment="Top" Background="#FFA0A0A0">
            <Image Width="30" Height="30" VerticalAlignment="Top" HorizontalAlignment="Left"
                   Margin="10" Source="/Images/icon.png"/>
            <Label Content="Добавить документ"
                   Foreground="White" VerticalAlignment="Center"
                   HorizontalContentAlignment="Center" FontSize="20"
                   FontWeight="Bold"/>
            <Button Content="Вернуться" Click="Back" Width="75" Height="25" VerticalAlignment="Top"
                   HorizontalAlignment="Right" Margin="10" Background="White"/>
        </Grid>

        <Image x:Name="src" Width="100" Height="100" VerticalAlignment="Top"
               HorizontalAlignment="Left" Margin="10,60" Source="/Images/icon-black.png"/>
        <Button Content="Выбрать" Click="SelectImage" Width="100" Height="25" VerticalAlignment="Top"
                HorizontalAlignment="Left" Margin="10,220,0,0" Background="White"/>

        <Label Content="Укажите наименование:" VerticalAlignment="Top" Margin="170,60, 10, 0"/>
        <TextBox x:Name="tbName" VerticalAlignment="Top" Height="25" Margin="170,85,10,0"/>
        <Label Content="Укажите ответственного:" VerticalAlignment="Top" Margin="170,110, 10, 0"/>
        <ComboBox x:Name="tbUser" VerticalAlignment="Top" Height="25" Margin="170,135,10,0">
            
        </ComboBox>
        <Label Content="Укажите код документа:" VerticalAlignment="Top" Margin="170,160, 10, 0"/>
        <TextBox x:Name="tbCode" VerticalAlignment="Top" Height="25" Margin="170,185,10,0"/>
        <Label Content="Укажите дату поступления:" VerticalAlignment="Top" Margin="170,210, 10, 0"/>
        <DatePicker x:Name="tbDate" VerticalAlignment="Top" Height="25" Margin="170,235,10,0"/>
        <Label Content="Укажите статус:" VerticalAlignment="Top" Margin="170,260, 10, 0"/>
        <ComboBox x:Name="tbStatus" VerticalAlignment="Top" Height="25" Margin="170,285,10,0">
            <TextBlock>Входящий</TextBlock>
            <TextBlock>Исходящий</TextBlock>
        </ComboBox>
        <Label Content="Укажите направлние:" VerticalAlignment="Top" Margin="170,310, 10, 0"/>
        <TextBox x:Name="tbDirection" VerticalAlignment="Top" Height="25" Margin="170,335,10,0"/>
        <Button Content="Сохранить" x:Name="bthAdd" Click="AddDocument" VerticalAlignment="Top" HorizontalAlignment="Right"
                Width="75" Height="25" Margin="170,335,10,0" Background="White"/>

    </Grid>
</Page>
